{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PolyControl",
            "type": "shell",
            "command": "make -j18 -f PolyControl/Makefile",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build PolyControl single core",
            "type": "shell",
            "command": "make -f PolyControl/Makefile",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build clean PolyControl",
            "type": "shell",
            "command": "make -j18 -f PolyControl/Makefile",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean PolyControl"
            ]
        },
        {
            "label": "Clean PolyControl",
            "type": "shell",
            "command": "make -f PolyControl/Makefile clean",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash PolyControl",
            "type": "shell",
            "command": "make -f PolyControl/Makefile flash",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build and Flash PolyControl",
            "type": "shell",
            "command": "make -f PolyControl/Makefile flash flash",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build PolyControl"
            ]
        }
    ]
}
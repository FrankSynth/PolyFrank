{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PolyControl",
            "type": "shell",
            "command": "make -j6 -f PolyControl/Makefile ; Remove-Item PolyControl/build/* -Include *.i*",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build PolyControl single core",
            "type": "shell",
            "command": "make -f PolyControl/Makefile ; Remove-Item PolyControl/build/* -Include *.i*",
